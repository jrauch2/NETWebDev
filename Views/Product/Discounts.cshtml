
@{
    ViewData["Title"] = "Discounts";
}
@using Northwind.Core.Models
@model IEnumerable<Discount>

<h2 class="mt-3"><i class="fas fa-tag"></i> Product Discounts</h2>
<div class="list-group">
    @foreach (Discount discount in Model)
    {
        <div class="list-group-item">
            @discount.Title<br/>
            @discount.Description<br/>
            Discount Expires: <i>@discount.EndTime.ToString("MM/dd/yyyy")</i><br/>
            <a href="#" class="code" data-code="@discount.Code" data-product="@discount.Product"><i class="far fa-hand-point-right"></i> Discount Code</a>
        </div>
    }
</div>

<!-- toast -->
<div id="toast" class="toast">
    <div class="toast-header">
        <strong class="mr-auto" id="product">Product Name</strong>
        <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
    <div class="toast-body">
        Discount Code: <strong id="code">CODE</strong>
    </div>
</div>

@section Scripts
{
    <script src="/js/client.js"></script>
}