@using Northwind.Core.Models
@model IEnumerable<Northwind.Core.Models.Category>

@{
    ViewData["Title"] = "Category";
}

<h2 class="mt-3"><i class="fas fa-list-ul"></i> Product Categories</h2>
<div class="list-group">
    @foreach (Category category in @Model)
    {
        <a class="list-group-item list-group-item-action" asp-action="CategoryDetail" asp-route-id="@category.CategoryId">@category.CategoryName - <i style="opacity: .6;">@category.Description</i></a>
    }
</div>
